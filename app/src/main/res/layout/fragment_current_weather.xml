<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#88B9D6"
    tools:context="com.example.shipon.weathermap.fragments.CurrentWeatherFragment">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/DefaultWeatherTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:padding="5dp"
                android:text="17.0&#xb0;C"
                android:textColor="#000000"
                android:textSize="32dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/DefaultDateTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="00/00/0000"
                android:textColor="#000000"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/DefaultDayTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Saturday"
                android:textColor="#000000"
                android:textSize="17dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/humidity"
                android:padding="10dp"
                android:layout_width="180dp"
                android:layout_height="110dp" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/DefaultWeatherDescriptionTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:padding="5dp"
                android:text="Scattered Clouds"
                android:textColor="#000000"
                android:textSize="18dp" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="10dp"
            android:background="#84BCB8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/DefaultMinWeatherTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="Min"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/DefaultMinimumWeatherTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="170c"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/DefaultMaxWeatherTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="Max"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/DefaultMaximumWeatherTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="170c"
                android:textColor="#000000"
                android:textSize="15dp" />





        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="10dp"
            android:background="#84BCB8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="Sunrise"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/DefaultSunriseTimeTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="00-00-00 AM"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="Sunset"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/DefaultSunsetTimeTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="00-00-00 AM"
                android:textColor="#000000"
                android:textSize="15dp" />



        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="3dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:background="#84BCB8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="Humidity"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/DefaultHumidityPercentTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="86%"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="Pressure"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/DefaultPressureTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="1002.12 hpa"
                android:textColor="#000000"
                android:textSize="15dp" />



        </LinearLayout>

    </LinearLayout>



</LinearLayout>
